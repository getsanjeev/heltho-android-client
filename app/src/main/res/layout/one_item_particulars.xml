<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#e6e6e6">

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="#fff"
                android:paddingBottom="20dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/user_profile_photo"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:civ_border_width="2dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pizzaicon"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/user_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/user_profile_photo"
                    android:text="Napoli Pizza"
                    android:textColor="#303F9F"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_EMAILID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_profile_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:textColor="#303F9F"
                    android:text="200 â‚¹"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/profile_layout"
                android:id="@+id/select_options"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e6e6e6"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0.5dp"
                        android:background="#fff"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.15"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/view_details"
                            android:background="#fff"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:textColor="#000"
                            android:layout_marginLeft="10dp"
                            android:textAlignment="textStart"
                            android:id="@+id/view_calorie_content"
                            android:text="Details"
                            android:layout_toRightOf="@+id/week"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0.5dp"
                        android:layout_marginRight="0.5dp"
                        android:background="#fff"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.10"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/share"
                            android:background="#fff"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:textColor="#000"
                            android:layout_marginRight="0.5dp"
                            android:textAlignment="textStart"
                            android:id="@+id/share_item"
                            android:text="   Share"
                            android:layout_toRightOf="@+id/week"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="0.5dp"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/bookmark"
                            android:background="#fff"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:text="Bookmark"
                            android:layout_marginLeft="5dp"
                            android:textAlignment="textStart"
                            android:textColor="#000"
                            android:background="#fff"
                            android:id="@+id/add_wish"/>
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/select_options"
                android:padding="5dp"
                android:id="@+id/description"
                android:layout_marginTop="-4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:text="Available At"
                        android:textSize="15dp"
                        android:textColor="#303F9F"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="5dp"
                        android:background="#4a5a71">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/address_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="221B BakerStreet Mrs Hudson 11th Cross Malleswaram, London - 560003 "
                        android:textSize="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:text="Ingredients"
                        android:textSize="15dp"
                        android:textColor="#303F9F"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="5dp"
                        android:background="#4a5a71">
                    </LinearLayout>

                    <TextView
                        android:id="@+id/work_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Bleached wheat flour, Partially Hydrogenated Soyabean Oil, Smoked chicken, JalapeÃ±os, Rocket leaves, Mozzarella Cheese,
                        Dehydrated Garlic, Black Pepper, Dehydrated Onion, Whole Basil,"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="15dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:background="#fff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/rate"
                    android:padding="5dp"
                    android:text="User Ratings $ Reviews"
                    android:textSize="15dp"
                    android:textColor="#303F9F"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/rate"
                    android:id="@+id/lll"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="5dp"
                    android:background="#4a5a71">
                </LinearLayout>

                <com.github.mikephil.charting.charts.BarChart
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="-40dp"
                    android:rotation="90"
                    android:layout_marginLeft="50dp"
                    android:layout_below="@+id/lll"
                    android:id="@+id/graph_ratings">
                </com.github.mikephil.charting.charts.BarChart>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.2â˜…"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/lll"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:id="@+id/star_val"
                    android:textColor="#000" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate and write a review"
                    android:textColor="#000"
                    android:layout_marginTop="-40dp"
                    android:layout_below="@+id/graph_ratings"
                    android:id="@+id/review_btn"
                    android:elevation="5dp"
                    android:textStyle="bold" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="See others Reviews"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/review_btn"
                    android:id="@+id/review_btn_next"
                    android:elevation="5dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/review_btn_next"
                    >
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add to cart"
            android:background="#fff"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Order Now"
            android:textColor="#fff"
            android:background="#3f51b5"/>
    </LinearLayout>


</RelativeLayout>
