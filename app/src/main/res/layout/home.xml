                        android:textSize="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_age6"
                        android:layout_toRightOf="@+id/person_photo6"
                        android:text="Italian"
                        android:layout_below="@+id/person_name6"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>






    </RelativeLayout>

</ScrollView>
